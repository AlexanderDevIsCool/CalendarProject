<p id="notice"><%= notice %></p>

<h1>Teachers</h1>

<div class="content">
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Surname</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @teachers.each do |teacher| %>
        <tr>
          <td><%= teacher.name %></td>
          <td><%= teacher.surname %></td>
          <td><%= link_to 'Edit', edit_teacher_path(teacher), class: 'btn btn-warning btn-sm' %></td>
          <td><%= link_to 'Destroy', teacher, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

<div class="footer">
  <%= link_to 'New Teacher', new_teacher_path, class: 'btn btn-success' %>
</div>