<article class="post">
  <section class="post-head">
    <h2><%= @post.title %></h2>
    <small>
      <time>
        <%= @post.created_at.to_date.strftime("%d %B %Y") %> |
        <%= link_to 'Edit', edit_post_path(@post) %> |
        <%= link_to 'Delete', post_path(@post), method: :delete, data: { confirm: 'Are you sure?' } %>
      </time>
    </small>
  </section>
  <section class="post-body">
    <%= @post.body.html_safe %>
  </section>
</article>

<%= render 'disqus' %>